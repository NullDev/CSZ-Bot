{
    "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
    "organizeImports": {
        "enabled": false
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineWidth": 100
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded"
        }
    },
    "json": {
        "parser": {
            "allowComments": true
        }
    },
    "overrides": [
        {
            "include": ["src/storage/migrations/**"],
            "linter": {
                "rules": {
                    "suspicious": {
                        "noExplicitAny": "off"
                    }
                }
            }
        }
    ]
}
